<rml>
	<head> 
		<link type="text/css" href="raindrop.css"/>
		<script>
			function onload()
				Global:GetParameters().HiddenMode = 0
				Global:GetParameters().Upscroll = 0
				Global:GetParameters().NoFail = 0
				Global:GetParameters().Rate = 1
				Global:GetParameters().Auto = 0
				Global:GetParameters().Wave = 0
				Global:GetParameters().Random = 0
			end
			
		
			function activateAuto(elem)
				if elem.id == "autobtn" then
					elem.id = "autobtnac"
					Global:GetParameters().Autoplay = 1
				else
					elem.id = "autobtn"
					Global:GetParameters().Autoplay = 0
				end
			end
			
			-- checked is nil or not nil depending on whatever it is.
			-- it also is on attributes rather than on the element itself (!)
			function changesetting(setting, val)
				val = (val.attributes.checked ~= nil) and 1 or 0
				if setting == "upscroll" then
					Global:GetParameters().Upscroll = val
				elseif setting == "nofail" then
					Global:GetParameters().NoFail = val
				elseif setting == "random" then
					Global:GetParameters().Random = val
				end
			end
		
		</script>
	
	</head>
	
	<body>
		<!--
		<img src="SongSelect/ssbanner.png"/> <br/>
		<button id="autobtn" onmousedown="activateAuto(element)"/> <br/>
		<div style="position: fixed; right: 0">
		<input type="checkbox" id="upscroll" onchange="changesetting(element.id, element)" /> Upscroll <br/>
		<input type="checkbox" id="nofail" onchange="changesetting(element.id, element)"/> Failure Disabled <br/>
		<input type="checkbox" id="random" onchange="changesetting(element.id, element)"/> Random <br/>
		</div>
		-->
	</body>
	<script>onload()</script>

</rml>
